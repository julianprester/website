---
permalink: all.xml
eleventyExcludeFromCollections: true
metadata:
  title: "Julian's Weblog"
  language: en
  url: {{ meta.url }}
  author:
    name: {{ meta.name }}
    email: {{ meta.email }}
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:base="{{ metadata.url }}" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ metadata.title }}</title>
    <link>{{ meta.url }}</link>
    <atom:link href="{{ permalink | absoluteUrl(metadata.url) }}" rel="self" type="application/rss+xml" />
    <description>{{ metadata.subtitle }}</description>
    <language>{{ metadata.language }}</language>
    {%- for item in collections.allWriting | reverse %}
    <item>
      <title>{{ item.data.title }}</title>
      <link>{{ item.url }}</link>
      <description>{{ item.content }}</description>
      <pubDate>{{ item.date | dateToRfc822 }}</pubDate>
      <dc:creator>{{ meta.name }}</dc:creator>
      <guid>{{ item.url | absoluteUrl(metadata.url) }}</guid>
    </item>
    {%- endfor %}
  </channel>
</rss>